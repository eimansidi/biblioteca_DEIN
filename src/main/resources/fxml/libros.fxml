<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" stylesheets="@../styles/style.css" fx:controller="com.eiman.biblioteca.controllers.LibroController">
    <VBox alignment="CENTER" spacing="15" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20">

        <Label text="%table.libros.titulo"/>

        <TextField fx:id="txtTitulo" promptText="%titulo"/>
        <TextField fx:id="txtAutor" promptText="%autor"/>
        <TextField fx:id="txtEditorial" promptText="%editorial"/>

        <HBox alignment="CENTER" spacing="10">
            <ChoiceBox fx:id="choiceEstadoLibro"/>
            <CheckBox fx:id="chkBaja" text="%baja"/>
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="btnSelectPortada" text="%selecciona.imagen" onAction="#selectPortada"/>
            <Button fx:id="btnBorrarPortada" text="%eliminar" onAction="#removePortada"/>
        </HBox>

        <ImageView fx:id="imgPortada" fitWidth="150" fitHeight="200" preserveRatio="true"/>

        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="btnGuardar" onAction="#guardarLibro" text="%guardar"/>
            <Button fx:id="btnCancelar" onAction="#cancelar" text="%cancelar"/>
        </HBox>
    </VBox>
</AnchorPane>
