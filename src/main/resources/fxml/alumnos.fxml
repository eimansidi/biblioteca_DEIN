<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" stylesheets="@../styles/style.css" fx:controller="com.eiman.biblioteca.controllers.AlumnoController">
    <VBox alignment="CENTER" spacing="15" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20">

        <Label text="%alumnos"/>

        <TextField fx:id="txtDni" promptText="%dni"/>
        <TextField fx:id="txtNombre" promptText="%nombre"/>
        <TextField fx:id="txtApellido1" promptText="%apellido1"/>
        <TextField fx:id="txtApellido2" promptText="%apellido2"/>

        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="btnGuardar" onAction="#guardarAlumno" text="%guardar"/>
            <Button fx:id="btnCancelar" onAction="#cancelar" text="%cancelar"/>
        </HBox>
    </VBox>
</AnchorPane>
