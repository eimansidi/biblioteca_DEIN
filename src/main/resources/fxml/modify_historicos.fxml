<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Pos?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" stylesheets="@../styles/style.css" fx:controller="com.eiman.biblioteca.controllers.ModifyHistoricoController">
    <VBox alignment="CENTER" spacing="15" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20">

        <Label text="%modificar.historico"/>

        <Label fx:id="lblAlumno" text="%alumno"/>
        <Label fx:id="lblLibro" text="%libro"/>

        <Label text="%label.fechaHoraDevolucion"/>
        <HBox spacing="10">
            <DatePicker fx:id="dateDevolucion"/>
            <Spinner fx:id="spinnerHora" min="0" max="23" initialValue="12"/>
            <Spinner fx:id="spinnerMinutos" min="0" max="59" initialValue="0"/>
        </HBox>

        <Label text="%label.estadoLibro"/>
        <ChoiceBox fx:id="choiceEstadoLibro"/>

        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="btnGuardar" onAction="#guardarCambios" text="%guardar"/>
            <Button fx:id="btnCancelar" onAction="#cancelar" text="%cancelar"/>
        </HBox>
    </VBox>
</AnchorPane>
