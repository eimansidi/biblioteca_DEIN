<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Pos?>

<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.eiman.biblioteca.controllers.BibliotecaController">
    <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <!-- Cabecera con icono y título -->
        <HBox id="headerContainer" alignment="CENTER">
            <ImageView id="iconImage" fx:id="iconImage" />
            <Label id="titleLabel" text="Biblioteca" />
        </HBox>

        <!-- Botones de navegación alineados horizontalmente -->
        <HBox spacing="15" alignment="CENTER">
            <Button fx:id="btnAlumnos" onAction="#openAlumnosTable" text="@messages.alumnos" />
            <Button fx:id="btnLibros" onAction="#openLibrosTable" text="@messages.libros" />
            <Button fx:id="btnPrestamos" onAction="#openPrestamosTable" text="@messages.prestamos" />
            <Button fx:id="btnHistoricoPrestamos" onAction="#openHistoricoPrestamosTable" text="@messages.historico" />
            <Button fx:id="btnInformes" onAction="#openInformesWindow" text="@messages.informes" />
        </HBox>
    </VBox>

    <!-- Tabla con más espacio -->
    <TableView fx:id="tableView" prefHeight="500" prefWidth="700" AnchorPane.bottomAnchor="80" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="140" />

    <!-- Botones de acción alineados y con margen inferior -->
    <HBox alignment="CENTER" spacing="15" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Button fx:id="btnAñadir" onAction="#openAddWindow" text="@messages.anadir" />
        <Button fx:id="btnModificar" onAction="#openModifyWindow" text="@messages.modificar" />
        <Button fx:id="btnEliminar" onAction="#deleteItem" text="@messages.eliminar" id="btnEliminar" />
    </HBox>

    <!-- Menú desplegable de ayuda -->
    <MenuBar>
        <Menu text="@messages.ayuda">
            <MenuItem text="@messages.guia" onAction="#openHelp" />
            <Menu text="@messages.idioma">
                <MenuItem text="Español" onAction="#changeToSpanish" />
                <MenuItem text="English" onAction="#changeToEnglish" />
            </Menu>
        </Menu>
    </MenuBar>
</AnchorPane>