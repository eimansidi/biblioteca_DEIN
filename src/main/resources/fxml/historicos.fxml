<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" stylesheets="@../styles/style.css" fx:controller="com.eiman.biblioteca.controllers.HistoricoController">
    <VBox alignment="CENTER" spacing="15" AnchorPane.leftAnchor="20" AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20">

        <Label text="%table.historico.id" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TableView fx:id="tablePrestamos" prefHeight="200">
            <columns>
                <TableColumn fx:id="colIdPrestamo" text="%id.prestamo"/>
                <TableColumn fx:id="colDniAlumno" text="%dni.alumno"/>
                <TableColumn fx:id="colCodigoLibro" text="%codigo.libro"/>
                <TableColumn fx:id="colFechaPrestamo" text="%fecha.prestamo"/>
            </columns>
        </TableView>

        <Label text="%label.fechaHoraDevolucion"/>
        <HBox spacing="10">
            <DatePicker fx:id="dateDevolucion"/>
            <Spinner fx:id="spinnerHora" min="0" max="23" initialValue="12"/>
            <Spinner fx:id="spinnerMinutos" min="0" max="59" initialValue="0"/>
        </HBox>

        <Label text="%label.estadoLibro"/>
        <ChoiceBox fx:id="choiceEstadoLibro"/>

        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="btnDevolver" onAction="#devolverLibro" text="%devolver"/>
        </HBox>
    </VBox>
</AnchorPane>
